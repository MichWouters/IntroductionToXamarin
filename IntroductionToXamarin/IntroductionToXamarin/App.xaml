<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IntroductionToXamarin.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="blueColour">DodgerBlue</Color>
            <Color x:Key="textColour">#FFF</Color>

            <Style TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource blueColour}" />
                <Setter Property="TextColor" Value="{StaticResource textColour}" />
            </Style>

            <Style TargetType="Entry">
                <Setter Property="TextColor" Value="{StaticResource blueColour}" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>